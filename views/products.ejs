<!DOCTYPE html>
<html lang="es">

<!-- HEAD -->
<%- include('./partials/head') %>

<body>

  <!-- HEADER -->
  <%- include('./partials/header') %>
  <!-- Main -->
  <main class="productos__main" id="space_complement">
    <section class="main__section__nav">
      <!-- Menu navegacion -->

      <%- include('./partials/navbarProducts') %>

    </section>
    <!-- Productos -->
    <section class="main__section__productos">

     
          
<% if (CategoryFilt) { %>
   <h2 class="subtitulo_productos"><%= CategoryFilt %></h2>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
 <% product.forEach(({id,mainImage, price, title, subtitle, category}) => { %>
          <div class="<%= id === 1 ? "carousel-item-active" : "carousel-item" %>">
            <article class="main__section__productos--producto">
              <a href="/productDetail/<%= id %>">
                <figure class="main__section__productos__producto--imagen">
                  <img src="/img/productos/<%= mainImage %> " alt=" <%= category %> ">
                </figure>
                <div class="datos_productos">
                  <span class="agregar-al-carrito"> M치s informaci칩n
                    <i class="fa-sharp fa-solid fa-circle-info carrito_prod"></i> </span>
                  <h3 class="main__section__productos__producto--precio">$ <%= price %> </h3>
                  <h4 class="main__section__productos__producto--marca"><%= title %> </h4>
                  <p class="main__section__productos__producto--modelo"><%= subtitle %> </p>
                </div>
              </a>

            </article>
          </div>
          <% }) %>
<% } else{%>
   <h2 class="subtitulo_productos">Destacados!</h2>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
  <% products.forEach(({id,mainImage, price, title, subtitle, category}) => { %>
   
    <div class="<%= id === 1 ? "carousel-item-active" : "carousel-item" %>">
      <article class="main__section__productos--producto">
        <a href="detail/<%= id %>">
          <figure class="main__section__productos__producto--imagen">
            <img src="/img/productos/<%= mainImage %> " alt=" <%= category %> ">
          </figure>
          <div class="datos_productos">
            <span class="agregar-al-carrito"> M치s informaci칩n
              <i class="fa-sharp fa-solid fa-circle-info carrito_prod"></i> </span>
            <h3 class="main__section__productos__producto--precio">$ <%= price %> </h3>
            <h4 class="main__section__productos__producto--marca"><%= title %> </h4>
            <p class="main__section__productos__producto--modelo"><%= subtitle %> </p>
          </div>
        </a>

      </article>
    </div>
    <% }) %>

  <% } %>
  <div>
    <a href="./products/create"><button class="btn--crear-prod">crear producto</button></a>
  </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" data-touch="true">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>

      </a>
      </div>
   
    </section>

  </main>

  <!-- FOOTER -->
  <%- include('./partials/footer') %>

  <div class="eliminar_carrousel">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="../javascript/dinamic.js"></script>
  </div>
</body>

</html>